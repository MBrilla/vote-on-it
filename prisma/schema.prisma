generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Poll model
model Poll {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String    @db.Text
  description String?   @db.Text
  code        String    @unique @db.Text
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  ends_at     DateTime  @db.Timestamptz(6)
  is_active   Boolean   @default(true)
  
  // Relations
  options Option[]
  votes   Vote[]
  
  @@map("polls")
}

model Option {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  text       String   @db.Text
  poll_id    String   @map("poll_id") @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)
  
  // Relations
  poll   Poll   @relation(fields: [poll_id], references: [id], onDelete: Cascade)
  votes  Vote[]
  
  @@map("options")
}

model Vote {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  poll_id    String   @map("poll_id") @db.Uuid
  option_id  String   @map("option_id") @db.Uuid
  voter_id   String   @map("voter_id") @db.Text
  created_at DateTime @default(now()) @db.Timestamptz(6)
  
  // Relations
  poll   Poll   @relation(fields: [poll_id], references: [id], onDelete: Cascade)
  option Option @relation(fields: [option_id], references: [id], onDelete: Cascade)
  
  @@unique([poll_id, voter_id], name: "votes_poll_id_voter_id_key")
  @@map("votes")
}
